#!/bin/bash
#SBATCH -J  T1008
#SBATCH -o T1008-%j.out
#SBATCH --partition Lewis,hpc5,hpc4
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --mem-per-cpu=10G
#SBATCH --time 2-00:00

mkdir -p SOFTWARE_PATH/test_out/T1008_multicom/
cd SOFTWARE_PATH/test_out/T1008_multicom/

source SOFTWARE_PATH/tools/python_virtualenv/bin/activate
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/boost_1_55_0/lib/:SOFTWARE_PATH/tools/OpenBLAS:$LD_LIBRARY_PATH

if [[ ! -f "SOFTWARE_PATH/test_out/T1008_multicom/mcomb/casp1.pdb" ]];then 
	SOFTWARE_PATH/src/multicom_ve.pl SOFTWARE_PATH/src/multicom_system_option_casp13 SOFTWARE_PATH/examples/T1008.fasta  SOFTWARE_PATH/test_out/T1008_multicom/   2>&1 | tee  SOFTWARE_PATH/test_out/T1008_multicom.log
fi

printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T1008_multicom.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T1008_multicom/mcomb/casp1.pdb" ]];then 
	printf "!!!!! Failed to run multicom, check the installation <SOFTWARE_PATH/src/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T1008_multicom/mcomb/casp1.pdb\n\n"
fi


perl SOFTWARE_PATH/installation/scripts/validate_integrated_predictions_final.pl  T1008  SOFTWARE_PATH/test_out/T1008_multicom/full_length_hard/meta SOFTWARE_PATH/installation/benchmark/FM/T1008 SOFTWARE_PATH/installation/benchmark/FM/T1008.pdb   2>&1 | tee -a SOFTWARE_PATH/test_out/T1008_multicom.log


printf "\nCheck final predictions.."


perl SOFTWARE_PATH/installation/scripts/validate_integrated_predictions_final.pl  T1008  SOFTWARE_PATH/test_out/T1008_multicom/mcomb SOFTWARE_PATH/installation/benchmark/FM/T1008/mcomb SOFTWARE_PATH/installation/benchmark/FM/T1008.pdb  2>&1 | tee -a SOFTWARE_PATH/test_out/T1008_multicom.log