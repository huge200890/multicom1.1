#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-psiblast-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-psiblast-$dtime/

mkdir psiblast
perl SOFTWARE_PATH/src/meta/psiblast//script/main_psiblast_v2.pl SOFTWARE_PATH/src/meta/psiblast/cm_option_adv SOFTWARE_PATH/examples/T0967.fasta psiblast  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-psiblast-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-psiblast-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-psiblast-$dtime/psiblast/psiblast1.pdb" ]];then 
	printf "!!!!! Failed to run psiblast, check the installation <SOFTWARE_PATH/src/meta/psiblast/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-psiblast-$dtime/psiblast/psiblast1.pdb\n\n"
fi

