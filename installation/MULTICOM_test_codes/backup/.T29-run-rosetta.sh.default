#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-rosetta-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-rosetta-$dtime/

mkdir rosetta2
mkdir rosetta_common
sh SOFTWARE_PATH/src/meta/script/make_rosetta_fragment.sh SOFTWARE_PATH/examples/T0967.fasta abini  rosetta_common 100 2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-rosetta-$dtime.log

sh SOFTWARE_PATH/src/meta/script/run_rosetta_no_fragment.sh SOFTWARE_PATH/examples/T0967.fasta abini rosetta2 100


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-rosetta-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-rosetta-$dtime/rosetta2/denovo0.pdb" ]];then 
	printf "!!!!! Failed to run rosetta, check the installation <SOFTWARE_PATH/src/meta/script/run_rosetta_no_fragment.sh>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-rosetta-$dtime/rosetta2/denovo0.pdb\n\n"
fi

