#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-compass-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-compass-$dtime/

mkdir compass
perl SOFTWARE_PATH/src/meta/compass/script/tm_compass_main_v2.pl SOFTWARE_PATH/src/meta/compass/compass_option SOFTWARE_PATH/examples/T0967.fasta compass  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-compass-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-compass-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-compass-$dtime/compass/com1.pdb" ]];then 
	printf "!!!!! Failed to run compass, check the installation <SOFTWARE_PATH/src/meta/compass/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-compass-$dtime/compass/com1.pdb\n\n"
fi

