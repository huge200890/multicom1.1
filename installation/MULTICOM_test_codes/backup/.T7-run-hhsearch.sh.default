#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-hhsearch-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-hhsearch-$dtime/

mkdir hhsearch
perl SOFTWARE_PATH/src/meta/hhsearch/script/tm_hhsearch_main_v2.pl SOFTWARE_PATH/src/meta/hhsearch/hhsearch_option_cluster SOFTWARE_PATH/examples/T0967.fasta hhsearch  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-hhsearch-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-hhsearch-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-hhsearch-$dtime/hhsearch/hh1.pdb" ]];then 
	printf "!!!!! Failed to run hhsearch, check the installation <SOFTWARE_PATH/src/meta/hhsearch/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-hhsearch-$dtime/hhsearch/hh1.pdb\n\n"
fi

