#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-unicon3d-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-unicon3d-$dtime/

mkdir unicon3d
perl SOFTWARE_PATH/src/meta/unicon3d/script/tm_unicon3d_main.pl SOFTWARE_PATH/src/meta/unicon3d/Unicon3D_option SOFTWARE_PATH/examples/T0967.fasta unicon3d  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-unicon3d-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-unicon3d-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-unicon3d-$dtime/unicon3d/ss1.pdb" ]];then 
	printf "!!!!! Failed to run unicon3d, check the installation <SOFTWARE_PATH/src/meta/hhsearch1.5/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-unicon3d-$dtime/unicon3d/ss1.pdb\n\n"
fi

