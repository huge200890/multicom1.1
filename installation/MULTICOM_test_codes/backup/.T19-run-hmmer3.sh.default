#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-hmmer3-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-hmmer3-$dtime/

mkdir hmmer3
perl SOFTWARE_PATH/src/meta/hmmer3/script/tm_hmmer3_main.pl SOFTWARE_PATH/src/meta/hmmer3/hmmer3_option SOFTWARE_PATH/examples/T0967.fasta hmmer3  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-hmmer3-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-hmmer3-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-hmmer3-$dtime/hmmer3/jackhmmer1.pdb" ]];then 
	printf "!!!!! Failed to run hmmer3, check the installation <SOFTWARE_PATH/src/meta/hmmer3/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-hmmer3-$dtime/hmmer3/jackhmmer1.pdb\n\n"
fi

