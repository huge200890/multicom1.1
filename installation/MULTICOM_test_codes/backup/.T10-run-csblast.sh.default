#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-csblast-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-csblast-$dtime/

mkdir csblast
perl SOFTWARE_PATH/src/meta/csblast/script/multicom_csblast_v2.pl SOFTWARE_PATH/src/meta/csblast/csblast_option SOFTWARE_PATH/examples/T0967.fasta csblast  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-csblast-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-csblast-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-csblast-$dtime/csblast/csblast1.pdb" ]];then 
	printf "!!!!! Failed to run csblast, check the installation <SOFTWARE_PATH/src/meta/csblast/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-csblast-$dtime/csblast/csblast1.pdb\n\n"
fi

