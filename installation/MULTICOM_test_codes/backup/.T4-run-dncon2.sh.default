#!/bin/bash

dtime=$(date +%Y-%b-%d)


source SOFTWARE_PATH/tools/python_virtualenv/bin/activate
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/boost_1_55_0/lib/:SOFTWARE_PATH/tools/OpenBLAS:$LD_LIBRARY_PATH


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-dncon2-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-dncon2-$dtime/
SOFTWARE_PATH/tools/DNCON2/dncon2-v1.0.sh SOFTWARE_PATH/examples/T0967.fasta SOFTWARE_PATH/installation/test_out/T0967-dncon2-$dtime/  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-dncon2-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-dncon2-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-dncon2-$dtime/T0967.dncon2.rr" ]];then 
	printf "!!!!! Failed to run DNCON2, check the installation <SOFTWARE_PATH/tools/DNCON2/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-dncon2-$dtime/T0967.dncon2.rr\n\n"
fi

