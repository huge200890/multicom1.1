#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-modeller9.16-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-modeller9.16-$dtime/

perl SOFTWARE_PATH/src/prosys/script/pir2ts_energy.pl SOFTWARE_PATH/tools/modeller-9.16/ SOFTWARE_PATH/examples/ SOFTWARE_PATH/installation/test_out/T0967-modeller9.16-$dtime/ SOFTWARE_PATH/examples/T0967.pir 5  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-modeller9.16-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-modeller9.16-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-modeller9.16-$dtime/T0967.pdb" ]];then 
	printf "!!!!! Failed to run modeller-9.16, check the installation <SOFTWARE_PATH/tools/modeller-9.16/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-modeller9.16-$dtime/T0967.pdb\n\n"
fi

