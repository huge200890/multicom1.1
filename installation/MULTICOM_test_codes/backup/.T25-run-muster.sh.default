#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-muster-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-muster-$dtime/

mkdir muster
perl SOFTWARE_PATH/src/meta/muster//script/tm_muster_main.pl SOFTWARE_PATH/src/meta/muster/muster_option_version4 SOFTWARE_PATH/examples/T0967.fasta muster  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-muster-$dtime.log
perl SOFTWARE_PATH/src/meta/muster//script/filter_identical_muster.pl muster

printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-muster-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-muster-$dtime/muster/muster1.pdb" ]];then 
	printf "!!!!! Failed to run muster, check the installation <SOFTWARE_PATH/src/meta/muster/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-muster-$dtime/muster/muster1.pdb\n\n"
fi

