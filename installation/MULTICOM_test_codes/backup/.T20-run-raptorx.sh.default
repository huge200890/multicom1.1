#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-raptorx-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-raptorx-$dtime/

mkdir raptorx
perl SOFTWARE_PATH/src/meta/raptorx/script/tm_raptorx_main.pl SOFTWARE_PATH/src/meta/raptorx/raptorx_option_version3 SOFTWARE_PATH/examples/T0967.fasta hhsearch15  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-raptorx-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-raptorx-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-raptorx-$dtime/raptorx/rap1.pdb" ]];then 
	printf "!!!!! Failed to run raptorx, check the installation <SOFTWARE_PATH/src/meta/raptorx/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-raptorx-$dtime/raptorx/rap1.pdb\n\n"
fi

