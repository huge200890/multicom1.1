#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-hhsearch151-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-hhsearch151-$dtime/

mkdir hhsearch151
perl SOFTWARE_PATH/src/meta/hhsearch151/script/tm_hhsearch151_main.pl SOFTWARE_PATH/src/meta/hhsearch151/hhsearch151_option SOFTWARE_PATH/examples/T0967.fasta hhsearch151  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-hhsearch151-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-hhsearch151-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-hhsearch151-$dtime/hhsearch151/hg1.pdb" ]];then 
	printf "!!!!! Failed to run hhsearch151, check the installation <SOFTWARE_PATH/src/meta/hhsearch151/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-hhsearch151-$dtime/hhsearch151/hg1.pdb\n\n"
fi

