#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-hhsuite-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-hhsuite-$dtime/

mkdir hhsuite
perl SOFTWARE_PATH/src/meta/hhsuite//script/tm_hhsuite_main.pl SOFTWARE_PATH/src/meta/hhsuite/hhsuite_option SOFTWARE_PATH/examples/T0967.fasta hhsuite  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-hhsuite-$dtime.log
perl SOFTWARE_PATH/src/meta/hhsuite//script/tm_hhsuite_main_simple.pl SOFTWARE_PATH/src/meta/hhsuite/super_option SOFTWARE_PATH/test/T0967.fasta hhsuite
perl SOFTWARE_PATH/src/meta/hhsuite//script/filter_identical_hhsuite.pl hhsuite

printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-hhsuite-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-hhsuite-$dtime/hhsuite/hhsuite1.pdb" ]];then 
	printf "!!!!! Failed to run hhsuite, check the installation <SOFTWARE_PATH/src/meta/hhsuite/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-hhsuite-$dtime/hhsuite/hhsuite1.pdb\n\n"
fi

