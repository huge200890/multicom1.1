#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-confold-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-confold-$dtime/

mkdir confold
sh SOFTWARE_PATH/src/meta/confold2/script/tm_confold2_main.sh SOFTWARE_PATH/src/meta/confold2/CONFOLD_option SOFTWARE_PATH/examples/T0967.fasta confold  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-confold-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-confold-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-confold-$dtime/confold/confold2-1.pdb" ]];then 
	printf "!!!!! Failed to run confold, check the installation <SOFTWARE_PATH/src/meta/confold2/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-confold-$dtime/confold/confold2-1.pdb\n\n"
fi

