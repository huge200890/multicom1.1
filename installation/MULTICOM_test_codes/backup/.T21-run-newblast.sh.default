#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-newblast-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-newblast-$dtime/

mkdir newblast
perl SOFTWARE_PATH/src/meta/newblast/script/newblast.pl SOFTWARE_PATH/src/meta/newblast/newblast_option SOFTWARE_PATH/examples/T0967.fasta newblast  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-newblast-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-newblast-$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-newblast-$dtime/newblast/newblast1.pdb" ]];then 
	printf "!!!!! Failed to run newblast, check the installation <SOFTWARE_PATH/src/meta/newblast/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-newblast-$dtime/newblast/newblast1.pdb\n\n"
fi

