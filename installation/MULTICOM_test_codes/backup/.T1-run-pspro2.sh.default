#!/bin/bash

dtime=$(date +%Y-%b-%d)


mkdir -p SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime/
cd SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime/
#SOFTWARE_PATH/tools/pspro2/bin/predict_ss_sa_cm.sh SOFTWARE_PATH/examples/T0967.fasta SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime/ &> SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime.log
SOFTWARE_PATH/tools/pspro2/bin/predict_ssa.sh SOFTWARE_PATH/examples/T0967.fasta SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime/  2>&1 | tee  SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime.log>..\n"


if [[ ! -f "SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime/T0967_fasta.sspro" ]];then 
	printf "\n!!!!! Failed to run pspro2, check the installation <SOFTWARE_PATH/tools/pspro2/>."
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/installation/test_out/T0967-pspro-$dtime/T0967_fasta.sspro\n\n"
fi