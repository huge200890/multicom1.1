#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T1006_prc_$dtime/
cd SOFTWARE_PATH/test_out/T1006_prc_$dtime/

mkdir prc
perl SOFTWARE_PATH/src/meta/prc/script/tm_prc_main_v2.pl SOFTWARE_PATH/src/meta/prc/prc_option SOFTWARE_PATH/examples/T1006.fasta prc  2>&1 | tee  SOFTWARE_PATH/test_out/T1006_prc_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T1006_prc_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T1006_prc_$dtime/prc/prc1.pdb" ]];then 
	printf "!!!!! Failed to run prc, check the installation <SOFTWARE_PATH/src/meta/prc/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T1006_prc_$dtime/prc/prc1.pdb\n\n"
fi

