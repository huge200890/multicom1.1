#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2_compass_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_compass_$dtime/

mkdir compass
perl SOFTWARE_PATH/src/meta/compass/script/tm_compass_main_v2.pl SOFTWARE_PATH/src/meta/compass/compass_option SOFTWARE_PATH/examples/T0993s2.fasta compass  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_compass_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_compass_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_compass_$dtime/compass/com1.pdb" ]];then 
	printf "!!!!! Failed to run compass, check the installation <SOFTWARE_PATH/src/meta/compass/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_compass_$dtime/compass/com1.pdb\n\n"
fi

