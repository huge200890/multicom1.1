#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2_hhsearch15_hard_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_hhsearch15_hard_$dtime/

mkdir hhsearch15
perl SOFTWARE_PATH/src/meta/hhsearch1.5/script/tm_hhsearch1.5_main_v2.pl SOFTWARE_PATH/src/meta/hhsearch1.5/hhsearch1.5_option_hard SOFTWARE_PATH/examples/T0993s2.fasta hhsearch15  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_hhsearch15_hard_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_hhsearch15_hard_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_hhsearch15_hard_$dtime/hhsearch15/ss1.pdb" ]];then 
	printf "!!!!! Failed to run hhsearch15, check the installation <SOFTWARE_PATH/src/meta/hhsearch1.5/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_hhsearch15_hard_$dtime/hhsearch15/ss1.pdb\n\n"
fi

