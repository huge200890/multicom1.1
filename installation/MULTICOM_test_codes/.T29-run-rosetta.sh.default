#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2_rosetta_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_rosetta_$dtime/

mkdir rosetta2
mkdir rosetta_common
sh SOFTWARE_PATH/src/meta/script/make_rosetta_fragment.sh SOFTWARE_PATH/examples/T0993s2.fasta abini  rosetta_common 100 2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_rosetta_$dtime.log
cp -r rosetta_common/abini rosetta2
sh SOFTWARE_PATH/src/meta/script/run_rosetta_no_fragment.sh SOFTWARE_PATH/examples/T0993s2.fasta abini rosetta2 100


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_rosetta_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_rosetta_$dtime/rosetta2/abini/abini-1.pdb" ]];then 
	printf "!!!!! Failed to run rosetta, check the installation <SOFTWARE_PATH/src/meta/script/run_rosetta_no_fragment.sh>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_rosetta_$dtime/rosetta2/abini/abini-1.pdb\n\n"
fi

