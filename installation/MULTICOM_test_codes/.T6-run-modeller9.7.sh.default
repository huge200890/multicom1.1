#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2_modeller9.7_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_modeller9.7_$dtime/

perl SOFTWARE_PATH/src/prosys/script/pir2ts_energy.pl SOFTWARE_PATH/tools/modeller9v7/ SOFTWARE_PATH/examples/ SOFTWARE_PATH/test_out/T0993s2_modeller9.7_$dtime/ SOFTWARE_PATH/examples/T0993s2.pir 5  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_modeller9.7_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_modeller9.7_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_modeller9.7_$dtime/T0993s2.pdb" ]];then 
	printf "!!!!! Failed to run modeller9v7, check the installation <SOFTWARE_PATH/tools/modeller9v7/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_modeller9.7_$dtime/T0993s2.pdb\n\n"
fi

