#!/bin/bash
#SBATCH -J  T1006
#SBATCH -o T1006-%j.out
#SBATCH --partition Lewis,hpc5,hpc4
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --mem-per-cpu=10G
#SBATCH --time 2-00:00

mkdir -p SOFTWARE_PATH/test_out/T1022s1_multicom/
cd SOFTWARE_PATH/test_out/T1022s1_multicom/

source SOFTWARE_PATH/tools/python_virtualenv/bin/activate
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/boost_1_55_0/lib/:SOFTWARE_PATH/tools/OpenBLAS:$LD_LIBRARY_PATH

if [[ ! -f "SOFTWARE_PATH/test_out/T1022s1_multicom/mcomb/casp1.pdb" ]];then 
	SOFTWARE_PATH/src/multicom_ve.pl SOFTWARE_PATH/src/multicom_system_option_casp13 SOFTWARE_PATH/examples/T1022s1.fasta  SOFTWARE_PATH/test_out/T1022s1_multicom/   2>&1 | tee  SOFTWARE_PATH/test_out/T1022s1_multicom.log
fi


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T1022s1_multicom.log>\n\n"



perl SOFTWARE_PATH/installation/scripts/validate_integrated_predictions.pl  T1022s1  SOFTWARE_PATH/test_out/T1022s1_multicom/full_length/meta SOFTWARE_PATH/installation/benchmark/TBM/   2>&1 | tee -a SOFTWARE_PATH/test_out/T1022s1_multicom.log



printf "\nCheck final predictions for full-length structure..\n"
perl SOFTWARE_PATH/installation/scripts/validate_integrated_predictions_final.pl  T1022s1  SOFTWARE_PATH/test_out/T1022s1_multicom/comb SOFTWARE_PATH/installation/benchmark/Two-domain/T1022s1/comb/ SOFTWARE_PATH/installation/benchmark/Two-domain/T1022s1.pdb   2>&1 | tee -a SOFTWARE_PATH/test_out/T1022s1_multicom.log


printf "\nCheck final predictions for domain0..\n"
perl SOFTWARE_PATH/installation/scripts/validate_integrated_predictions_final.pl  domain0  SOFTWARE_PATH/test_out/T1022s1_multicom/domain0/meta SOFTWARE_PATH/installation/benchmark/Two-domain/T1022s1/domain0/ SOFTWARE_PATH/installation/benchmark/Two-domain/T1022s1-D1.pdb   2>&1 | tee -a SOFTWARE_PATH/test_out/T1022s1_multicom.log



printf "\nCheck final predictions for domain1..\n"
perl SOFTWARE_PATH/installation/scripts/validate_integrated_predictions_final.pl  domain1  SOFTWARE_PATH/test_out/T1022s1_multicom/domain1/meta SOFTWARE_PATH/installation/benchmark/Two-domain/T1022s1/domain1/ SOFTWARE_PATH/installation/benchmark/Two-domain/T1022s1-D2.pdb   2>&1 | tee -a SOFTWARE_PATH/test_out/T1022s1_multicom.log



