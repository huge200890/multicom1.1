#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2_raptorx_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_raptorx_$dtime/

mkdir raptorx
perl SOFTWARE_PATH/src/meta/raptorx/script/tm_raptorx_main.pl SOFTWARE_PATH/src/meta/raptorx/raptorx_option_version3 SOFTWARE_PATH/examples/T0993s2.fasta raptorx  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_raptorx_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_raptorx_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_raptorx_$dtime/raptorx/rapt1.pdb" ]];then 
	printf "!!!!! Failed to run raptorx, check the installation <SOFTWARE_PATH/src/meta/raptorx/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_raptorx_$dtime/raptorx/rapt1.pdb\n\n"
fi

