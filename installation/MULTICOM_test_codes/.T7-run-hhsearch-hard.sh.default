#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T1006_hhsearch_hard_$dtime/
cd SOFTWARE_PATH/test_out/T1006_hhsearch_hard_$dtime/

mkdir hhsearch
perl SOFTWARE_PATH/src/meta/hhsearch/script/tm_hhsearch_main_v2.pl SOFTWARE_PATH/src/meta/hhsearch/hhsearch_option_hard SOFTWARE_PATH/examples/T1006.fasta hhsearch  2>&1 | tee  SOFTWARE_PATH/test_out/T1006_hhsearch_hard_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T1006_hhsearch_hard_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T1006_hhsearch_hard_$dtime/hhsearch/hh1.pdb" ]];then 
	printf "!!!!! Failed to run hhsearch, check the installation <SOFTWARE_PATH/src/meta/hhsearch/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T1006_hhsearch_hard_$dtime/hhsearch/hh1.pdb\n\n"
fi

