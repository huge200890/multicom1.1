#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2_ffas_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_ffas_$dtime/

mkdir ffas
perl SOFTWARE_PATH/src/meta/ffas//script/tm_ffas_main.pl SOFTWARE_PATH/src/meta/ffas/ffas_option SOFTWARE_PATH/examples/T0993s2.fasta ffas  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_ffas_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_ffas_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_ffas_$dtime/ffas/ff1.pdb" ]];then 
	printf "!!!!! Failed to run ffas, check the installation <SOFTWARE_PATH/src/meta/ffas/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_ffas_$dtime/ffas/ff1.pdb\n\n"
fi

