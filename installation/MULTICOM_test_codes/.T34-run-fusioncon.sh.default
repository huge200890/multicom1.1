#!/bin/bash

dtime=$(date +%m%d%y)



source SOFTWARE_PATH/tools/python_virtualenv/bin/activate
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/boost_1_55_0/lib/:SOFTWARE_PATH/tools/OpenBLAS:$LD_LIBRARY_PATH

mkdir -p SOFTWARE_PATH/test_out/T0993s2_fusioncon_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_fusioncon_$dtime/

mkdir fusioncon
perl SOFTWARE_PATH/src/meta/fusioncon/script/tm_fusioncon_main.pl SOFTWARE_PATH/src/meta/fusioncon/fusioncon_option SOFTWARE_PATH/examples/T0993s2.fasta fusioncon  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_fusioncon_$dtime.log


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_fusioncon_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_fusioncon_$dtime/fusioncon/fusicon1.pdb" ]];then 
	printf "!!!!! Failed to run fusioncon, check the installation <SOFTWARE_PATH/src/meta/fusioncon/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_fusioncon_$dtime/fusioncon/fusicon1.pdb\n\n"
fi

