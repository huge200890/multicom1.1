#!/bin/bash

dtime=$(date +%m%d%y)


mkdir -p SOFTWARE_PATH/test_out/T0993s2_hhblits_$dtime/
cd SOFTWARE_PATH/test_out/T0993s2_hhblits_$dtime/

mkdir hhblits
perl SOFTWARE_PATH/src/meta/hhblits//script/tm_hhblits_main.pl SOFTWARE_PATH/src/meta/hhblits/hhblits_option SOFTWARE_PATH/examples/T0993s2.fasta hhblits  2>&1 | tee  SOFTWARE_PATH/test_out/T0993s2_hhblits_$dtime.log
perl SOFTWARE_PATH/src/meta/hhblits//script/filter_identical_hhblits.pl hhblits

printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0993s2_hhblits_$dtime.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0993s2_hhblits_$dtime/hhblits/blits1.pdb" ]];then 
	printf "!!!!! Failed to run hhblits, check the installation <SOFTWARE_PATH/src/meta/hhblits/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0993s2_hhblits_$dtime/hhblits/blits1.pdb\n\n"
fi

